          <div class="aspect-square flex items-center justify-center rounded-lg bg-white/60 hover:bg-white transition-colors">
            <span class="text-sm md:text-base text-[#8FA58E]">4</span>
          </div>

          <div class="aspect-square flex items-center justify-center rounded-lg bg-white/60 hover:bg-white transition-colors">
            <span class="text-sm md:text-base text-[#8FA58E]">5</span>
          </div>
          <div class="aspect-square flex items-center justify-center rounded-lg bg-white/60 hover:bg-white transition-colors">
            <span class="text-sm md:text-base text-[#8FA58E]">6</span>
          </div>
