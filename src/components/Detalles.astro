---
// Confirmacion.astro
---

<section class="relative w-full py-16 md:py-20 px-6 overflow-hidden">
  
  <!-- Flores decorativas IZQUIERDA - Repetidas verticalmente -->
  <div class="absolute left-0 top-0 bottom-0 w-8 md:w-16 pointer-events-none z-10">
    <div class="flores-izq flex flex-col h-full justify-between opacity-0">
      <img src="/imagenes/FloresLaterales.webp" alt="" class="w-full h-auto mt-10" />
      <img src="/imagenes/FloresLaterales.webp" alt="" class="w-full h-auto" />
      <img src="/imagenes/FloresLaterales.webp" alt="" class="w-full h-auto " />
    </div>
  </div>

  <!-- Flores decorativas DERECHA - Repetidas verticalmente -->
  <div class="absolute right-0 top-0 bottom-0 w-8 md:w-16 pointer-events-none z-10">
    <div class="flores-der flex flex-col h-full justify-between opacity-0">
      <img src="/imagenes/FloresLaterales.webp" alt="" class="mt-10 w-full h-auto scale-x-[-1] " />
      <img src="/imagenes/FloresLaterales.webp" alt="" class="w-full h-auto scale-x-[-1] " />
      <img src="/imagenes/FloresLaterales.webp" alt="" class="w-full h-auto  scale-x-[-1] " />
    </div>
  </div>

  <div class="max-w-xl mx-auto relative z-20">

    <!-- Número de Pases -->
    <div class="seccion-pases text-center mb-12 opacity-0">
      <p class="font-charm text-2xl md:text-xl text-[#C8A75A] mb-2">
        Número de pases
      </p>
      
      <!-- Icono de ticket -->
      <div class="flex justify-center mb-4">
        <img 
          src="/imagenes/Ticket.png" 
          alt="Ticket" 
          class="w-16 h-16 md:w-20 md:h-20 object-contain"
        />
      </div>

      <p class="font-charm text-2xl md:text-xl text-[#8FA58E] mb-2">
        Lugares reservados en su honor
      </p>

      <!-- Número 1 en cuadrado redondeado -->
      <div class="flex justify-center mb-4">
        <div class="w-10 h-10 md:w-20 md:h-20 rounded-2xl border-[3px] border-[#C8A75A] flex items-center justify-center bg-white shadow-sm">
          <span class="text-4xl md:text-5xl font-bold text-[#C8A75A]">2</span>
        </div>
      </div>
    </div>

    <!-- Separador -->
    <div class="separador-1 flex items-center justify-center gap-3 my-8 opacity-0">
      <div class="h-px w-16 bg-[#C8A75A]"></div>
      <div class="w-2 h-2 rounded-full bg-[#C8A75A]"></div>
      <div class="h-px w-16 bg-[#C8A75A]"></div>
    </div>

<!-- Confirmación de Asistencia -->
    <div class="seccion-confirmacion text-center mb-12 opacity-0">
      
  <p class="font-charm text-2xl md:text-lg text-[#8FA58E] mb-6 mt-8 max-w-md mx-auto">
        Por favor, confirme su asistencia con los novios
    </p>
  

      <!-- Texto indicativo -->
      <p class="font-charm text-lg md:text-xl text-[#b89850] mb-3">
         Haz click en el botón 
      </p>

      <!-- Botones de confirmación -->
      <div class="flex flex-col gap-3 items-center mx-auto">
        <!-- Botón Novia -->
        <a 
          href="https://wa.link/x35tbq" 
          target="_blank"
          class="inline-flex items-center justify-center gap-2 px-6 py-2.5 bg-[#C8A75A] hover:bg-[#b89850] text-white rounded-full transition-all duration-300 hover:shadow-lg hover:scale-105 font-medium text-sm"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
