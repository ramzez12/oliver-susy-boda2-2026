          </svg>
          <span>Confirmar número novio</span>
        </a>
      </div>
    </div>
    <!-- Separador -->
    <div class="separador-2 flex items-center justify-center gap-3 my-8 opacity-0">
      <div class="h-px w-16 bg-[#C8A75A]"></div>
      <div class="w-2 h-2 rounded-full bg-[#C8A75A]"></div>
      <div class="h-px w-16 bg-[#C8A75A]"></div>
    </div>
<!-- Código de Vestimenta -->
    <div class="seccion-vestimenta text-center opacity-0">
      <h3 class="font-charm text-2xl md:text-3xl text-[#C8A75A] font-bold mb-3">
        Código de vestimenta
      </h3>
      
      <!-- Imagen de vestimenta -->
      <div class="flex justify-center mb-4">
        <img 
          src="/imagenes/CodigoVestimenta.png" 
          alt="Vestimenta formal" 
          class="w-16 h-16 md:w-20 md:h-20 object-contain"
        />
      </div>
      
      <p class="font-charm text-xl md:text-2xl text-[#8FA58E] font-semibold">
        Formal
      </p>
    </div>

  </div>
</section>

<style>
  .font-charm {
    font-family: 'Charm', cursive !important;
  }
</style>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  // Animación de flores izquierda
  gsap.fromTo('.flores-izq', 
    {
      opacity: 0,
      x: -100,
      rotation: -10
    },
    {
      opacity: 1,
      x: 0,
      rotation: 0,
      duration: 1.5,
      ease: 'power3.out',
      scrollTrigger: {
        trigger: '.flores-izq',
        start: 'top 85%',
        toggleActions: 'play none none none'
      }
    }
  );

  // Animación de flores derecha
  gsap.fromTo('.flores-der', 
    {
      opacity: 0,
      x: 100,
      rotation: 10
    },
    {
      opacity: 1,
      x: 0,
      rotation: 0,
      duration: 1.5,
      ease: 'power3.out',
      scrollTrigger: {
        trigger: '.flores-der',
        start: 'top 85%',
        toggleActions: 'play none none none'
      }
    }
  );

  // Animación de sección de PASES (todos los elementos al mismo tiempo)
  gsap.fromTo('.seccion-pases',
    {
      opacity: 0,
      y: 60,
      scale: 0.95
    },
    {
      opacity: 1,
      y: 0,
      scale: 1,
      duration: 1.3,
      ease: 'power3.out',
      scrollTrigger: {
        trigger: '.seccion-pases',
        start: 'top 80%',
        toggleActions: 'play none none none'
      }
    }
  );

  // Animación de separador 1
  gsap.fromTo('.separador-1',
    {
      opacity: 0,
      scale: 0.8
    },
    {
      opacity: 1,
      scale: 1,
      duration: 1,
      ease: 'power2.out',
      scrollTrigger: {
        trigger: '.separador-1',
        start: 'top 85%',
        toggleActions: 'play none none none'
      }
    }
  );

  // Animación de sección de CONFIRMACIÓN (todos los elementos al mismo tiempo)
  gsap.fromTo('.seccion-confirmacion',
    {
      opacity: 0,
      y: 60,
      scale: 0.95
    },
    {
      opacity: 1,
      y: 0,
      scale: 1,
      duration: 1.3,
      ease: 'power3.out',
      scrollTrigger: {
        trigger: '.seccion-confirmacion',
        start: 'top 80%',
        toggleActions: 'play none none none'
      }
    }
  );

  // Animación de separador 2
  gsap.fromTo('.separador-2',
    {
      opacity: 0,
      scale: 0.8
    },
    {
      opacity: 1,
      scale: 1,
      duration: 1,
      ease: 'power2.out',
      scrollTrigger: {
        trigger: '.separador-2',
        start: 'top 85%',
        toggleActions: 'play none none none'
      }
    }
  );

  // Animación de sección de VESTIMENTA (todos los elementos al mismo tiempo)
  gsap.fromTo('.seccion-vestimenta',
    {
      opacity: 0,
      y: 60,
      scale: 0.95
    },
    {
      opacity: 1,
      y: 0,
      scale: 1,
      duration: 1.3,
      ease: 'power3.out',
      scrollTrigger: {
        trigger: '.seccion-vestimenta',
        start: 'top 80%',
        toggleActions: 'play none none none'
      }
    }
  );
</script>