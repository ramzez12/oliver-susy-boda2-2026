---
// CeremonySection.astro
---
<section class="relative w-full -mt-2 md:-mt-20">
  <div class="max-w-2xl mx-auto relative">
    
    <!-- Flores decorativas IZQUIERDA -->
    <div class="flor-izq-ceremony absolute top-0 left-0 w-32 md:w-64 pointer-events-none z-20 mt-3 -ml-4 md:mt-0 md:-ml-6 opacity-0">
      <img 
        src="/imagenes/FlorIzquierda.webp" 
        alt="Flores decorativas izquierda" 
        class="w-full h-auto object-contain"
      />
    </div>
    
    <!-- Flores decorativas DERECHA -->
    <div class="flor-der-ceremony absolute top-0 right-0 w-32 md:w-64 pointer-events-none z-20 mt-3 -mr-4 md:mt-0 md:-mr-6 opacity-0">
      <img 
        src="/imagenes/FlorDerecha.webp" 
        alt="Flores decorativas derecha" 
        class="w-full h-auto object-contain"
      />
    </div>
    
    <!-- Contenido principal -->
    <div class="relative z-10 pt-20 pb-12 md:pt-40 md:pb-16 px-4 md:px-8">
      
      <!-- Contenedor con imagen de fondo ovalado -->
      <div class="ceremony-content relative max-w-md mx-auto opacity-0">
        
        <!-- Imagen de fondo ovalado -->
        <div class="absolute inset-0 flex items-center justify-center">
          <img 
            src="/imagenes/cafe.webp" 
            alt="Marco ovalado" 
            class="w-full h-full object-contain"
          />
        </div>
        
        <!-- Contenido sobre el ovalado -->
        <div class="relative z-10 py-16 md:py-20 px-8 md:px-12">
          
          <!-- Título -->
          <div class="text-center mb-4">
            <h2 class="font-charm text-2xl md:text-5xl text-[#C8A75A] mb-2 leading-tight">
              Ceremonia Religiosa
            </h2>
          </div>
          
          <!-- Ilustración de iglesia -->
          <div class="flex justify-center mb-4">
            <img 
              src="/imagenes/IconoDireccion.webp" 
              alt="Iglesia" 
              class="w-24 md:w-28 h-auto object-contain"
            />
          </div>
          
          <!-- Información de lugar -->
          <div class="text-center mb-3">
            <p class="font-charm text-xl md:text-lg text-[#C8A75A] leading-10">
              Salón  Ciudad Jardín
            </p>
            <p class="font-charm text-xl md:text-xl text-[#8FA58E] font-medium mb-1 leading-10">
              <span class="font-charm">8vo anillo Moscú al lado del gimnasio Novafit Moscú </span>
            </p>
          </div>
          
          <!-- Información de hora -->
          <div class="text-center mb-4">
            <p class="font-charm text-xl md:text-xl text-[#C8A75A]">
              Hora: <span class="font-charm font-bold">17:00</span>
            </p>
          </div>
          
          <!-- Separador -->
          <div class="flex items-center justify-center gap-3 mb-4">
            <div class="h-px w-12 md:w-16 bg-[#C8A75A]"></div>
            <div class="w-2 h-2 rounded-full bg-[#C8A75A]"></div>
            <div class="h-px w-12 md:w-16 bg-[#C8A75A]"></div>
          </div>
          
          <!-- Texto ¿Cómo llegar? -->
          <div class="text-center mb-4">
            <p class="font-charm text-xl md:text-2xl text-[#8FA58E] font-medium">
              ¿Cómo llegar?
            </p>
          </div>
          
          <!-- Botón Ver Ubicación -->
          <div class="flex justify-center">
            <a 
              href="https://maps.app.goo.gl/uqpmmpvyfbkSm53F7" 
              target="_blank"
              class="inline-block px-8 py-3 rounded-full text-white font-medium text-base md:text-lg transition-all duration-300 hover:shadow-lg hover:scale-105 bg-[#C8A75A] hover:bg-[#b89850]"
            >
              VER UBICACIÓN
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Para texto con Charm */
  .font-charm {
    font-family: 'Charm', cursive !important;
  }
  
  /* Sombra suave para mejor legibilidad */
  p, h2 {
    text-shadow: 0 1px 3px rgba(255, 255, 255, 0.5);
  }
</style>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  // Animación elegante de entrada para la flor izquierda
  gsap.fromTo('.flor-izq-ceremony', 
    {
      opacity: 0,
      x: -100,
      rotation: -15
    },
    {
      opacity: 0.9,
      x: 0,
      rotation: 0,
      duration: 1.8,
      ease: 'power3.out',
      scrollTrigger: {
        trigger: '.flor-izq-ceremony',
        start: 'top 90%',
        toggleActions: 'play none none none'
      }
    }
  );

  // Animación elegante de entrada para la flor derecha
  gsap.fromTo('.flor-der-ceremony', 
    {
      opacity: 0,
      x: 100,
      rotation: 15
    },
    {
      opacity: 0.9,
      x: 0,
      rotation: 0,
      duration: 1.8,
      ease: 'power3.out',
      scrollTrigger: {
        trigger: '.flor-der-ceremony',
        start: 'top 90%',
        toggleActions: 'play none none none'
      }
    }
  );

  // Animación del contenido principal
  gsap.fromTo('.ceremony-content',
    {
      opacity: 0,
      y: 60,
      scale: 0.95
    },
    {
      opacity: 1,
      y: 0,
      scale: 1,
      duration: 1.4,
      ease: 'power3.out',
      scrollTrigger: {
        trigger: '.ceremony-content',
        start: 'top 85%',
        toggleActions: 'play none none none'
      }
    }
  );
</script>