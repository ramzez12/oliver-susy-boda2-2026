---
// GaleriaFotos.astro
---

<section class="relative w-full py-16 md:py-20 px-6 overflow-hidden">
  
  <div class="max-w-6xl mx-auto">
    
    <!-- Título -->
    <div class="titulo-galeria text-center mb-12 opacity-0">
      <h2 class="font-charm text-3xl md:text-5xl text-[#8FA58E] font-bold mb-4">
        Nuestra Galería de Momentos
      </h2>
      <p class="font-charm text-lg md:text-xl text-[#C8A75A]">
        Capturando nuestros recuerdos más especiales
      </p>
    </div>

    <!-- Grid de Fotos -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 galeria-grid opacity-0">
      
      <!-- Foto 1 -->
      <div class="foto-item relative overflow-hidden rounded-2xl shadow-lg cursor-pointer group hover:shadow-2xl transition-all duration-300" data-index="0">
        <img 
          src="/imagenes/4.webp" 
          alt="Momento especial 1" 
          class="w-full h-64 object-cover group-hover:scale-110 transition-transform duration-500"
        />
        <div class="absolute inset-0 bg-black/0 group-hover:bg-black/20 transition-all duration-300 flex items-center justify-center">
          <svg class="w-12 h-12 text-white opacity-0 group-hover:opacity-100 transition-opacity duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7"></path>
          </svg>
        </div>
      </div>

      <!-- Foto 2 -->
      <div class="foto-item relative overflow-hidden rounded-2xl shadow-lg cursor-pointer group hover:shadow-2xl transition-all duration-300" data-index="1">
        <img 
          src="/imagenes/5.webp" 
          alt="Momento especial 2" 
          class="w-full h-64 object-cover group-hover:scale-110 transition-transform duration-500"
        />
        <div class="absolute inset-0 bg-black/0 group-hover:bg-black/20 transition-all duration-300 flex items-center justify-center">
          <svg class="w-12 h-12 text-white opacity-0 group-hover:opacity-100 transition-opacity duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7"></path>
          </svg>
        </div>
      </div>

      <!-- Foto 3 -->
      <div class="foto-item relative overflow-hidden rounded-2xl shadow-lg cursor-pointer group hover:shadow-2xl transition-all duration-300" data-index="2">
        <img 
          src="/imagenes/6.webp" 
          alt="Momento especial 3" 
          class="w-full h-64 object-cover group-hover:scale-110 transition-transform duration-500"
        />
        <div class="absolute inset-0 bg-black/0 group-hover:bg-black/20 transition-all duration-300 flex items-center justify-center">
          <svg class="w-12 h-12 text-white opacity-0 group-hover:opacity-100 transition-opacity duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7"></path>
          </svg>
        </div>
      </div>

      <!-- Foto 4 -->
      <div class="foto-item relative overflow-hidden rounded-2xl shadow-lg cursor-pointer group hover:shadow-2xl transition-all duration-300" data-index="3">
        <img 
          src="/imagenes/7.webp" 
          alt="Momento especial 4" 
          class="w-full h-64 object-cover group-hover:scale-110 transition-transform duration-500"
        />
        <div class="absolute inset-0 bg-black/0 group-hover:bg-black/20 transition-all duration-300 flex items-center justify-center">
          <svg class="w-12 h-12 text-white opacity-0 group-hover:opacity-100 transition-opacity duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7"></path>
          </svg>
        </div>
      </div>

    </div>

  </div>

  <!-- Modal Galería -->
  <div id="modal-galeria" class="fixed inset-0 bg-black/95 z-50 hidden items-center justify-center p-4">
    
    <!-- Botón Cerrar -->
    <button id="cerrar-modal" class="absolute top-4 right-4 text-white hover:text-[#C8A75A] transition-colors z-10">
      <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>

    <!-- Botón Anterior -->
    <button id="btn-anterior" class="absolute left-4 text-white hover:text-[#C8A75A] transition-colors z-10">
      <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
    </button>

    <!-- Imagen del Modal -->
    <div class="relative max-w-5xl max-h-[90vh]">
      <img id="imagen-modal" src="" alt="Foto ampliada" class="max-w-full max-h-[90vh] object-contain rounded-lg shadow-2xl" />
    </div>

    <!-- Botón Siguiente -->
    <button id="btn-siguiente" class="absolute right-4 text-white hover:text-[#C8A75A] transition-colors z-10">
      <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
      </svg>
    </button>

    <!-- Contador -->
    <div class="absolute bottom-4 left-1/2 -translate-x-1/2 text-white text-lg font-semibold">
      <span id="contador-actual">1</span> / <span id="contador-total">4</span>
    </div>

  </div>

</section>

<style>
  .font-charm {
    font-family: 'Charm', cursive !important;
  }
</style>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  // Animación del título
  gsap.fromTo('.titulo-galeria',
    {
      opacity: 0,
      y: 60,
      scale: 0.95
    },
    {
      opacity: 1,
      y: 0,
      scale: 1,
      duration: 1.2,
      ease: 'power3.out',
      scrollTrigger: {
        trigger: '.titulo-galeria',
        start: 'top 80%',
        toggleActions: 'play none none none'
      }
    }
  );

  // Animación del grid de fotos
  gsap.fromTo('.galeria-grid',
    {
      opacity: 0,
      y: 80
    },
    {
      opacity: 1,
      y: 0,
      duration: 1.3,
      ease: 'power3.out',
      scrollTrigger: {
        trigger: '.galeria-grid',
        start: 'top 80%',
        toggleActions: 'play none none none'
      }
    }
  );

  // Animación individual de cada foto con stagger
  gsap.fromTo('.foto-item',
    {
      opacity: 0,
      scale: 0.8,
      y: 40
    },
    {
      opacity: 1,
      scale: 1,
      y: 0,
      duration: 0.8,
      ease: 'back.out(1.2)',
      stagger: 0.15,
      scrollTrigger: {
        trigger: '.galeria-grid',
        start: 'top 75%',
        toggleActions: 'play none none none'
      }
    }
  );

  // Funcionalidad del Modal
  const imagenes = [
    '/imagenes/4.webp',
    '/imagenes/5.webp',
    '/imagenes/6.webp',
    '/imagenes/7.webp'
  ];

  let indiceActual = 0;
  const modal = document.getElementById('modal-galeria');
  const imagenModal = document.getElementById('imagen-modal');
  const contadorActual = document.getElementById('contador-actual');
  const contadorTotal = document.getElementById('contador-total');
  const btnCerrar = document.getElementById('cerrar-modal');
  const btnAnterior = document.getElementById('btn-anterior');
  const btnSiguiente = document.getElementById('btn-siguiente');

  contadorTotal.textContent = imagenes.length;

  // Abrir modal
  document.querySelectorAll('.foto-item').forEach((item) => {
    item.addEventListener('click', () => {
      indiceActual = parseInt(item.dataset.index);
      mostrarImagen(indiceActual);
      modal.classList.remove('hidden');
      modal.classList.add('flex');
      document.body.style.overflow = 'hidden';
    });
  });

  // Cerrar modal
  btnCerrar.addEventListener('click', cerrarModal);
  modal.addEventListener('click', (e) => {
    if (e.target === modal) cerrarModal();
  });

  function cerrarModal() {
    modal.classList.add('hidden');
    modal.classList.remove('flex');
    document.body.style.overflow = 'auto';
  }

  // Navegación
  btnAnterior.addEventListener('click', () => {
    indiceActual = (indiceActual - 1 + imagenes.length) % imagenes.length;
    mostrarImagen(indiceActual);
  });

  btnSiguiente.addEventListener('click', () => {
    indiceActual = (indiceActual + 1) % imagenes.length;
    mostrarImagen(indiceActual);
  });

  // Teclas del teclado
  document.addEventListener('keydown', (e) => {
    if (!modal.classList.contains('hidden')) {
      if (e.key === 'Escape') cerrarModal();
      if (e.key === 'ArrowLeft') btnAnterior.click();
      if (e.key === 'ArrowRight') btnSiguiente.click();
    }
  });

  function mostrarImagen(indice) {
    imagenModal.src = imagenes[indice];
    contadorActual.textContent = indice + 1;
    
    // Animación de entrada de la imagen
    gsap.fromTo(imagenModal, 
      { opacity: 0, scale: 0.9 },
      { opacity: 1, scale: 1, duration: 0.4, ease: 'power2.out' }
    );
  }
</script>