    filter: drop-shadow(0 8px 20px rgba(200, 167, 90, 0.7));
  }

  img {
    filter: drop-shadow(0 4px 10px rgba(0, 0, 0, 0.12));
    transition: filter 0.3s ease;
  }

  img:hover {
    filter: drop-shadow(0 6px 16px rgba(0, 0, 0, 0.18));
  }

  #linea-central {
    box-shadow: 0 0 15px rgba(200, 167, 90, 0.3);
  }





</style>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  // --- Animaciones del encabezado (se mantienen separadas) ---

  // Animación de hojas laterales (Entrada lateral)
  gsap.fromTo('.hoja-izq-itinerario',
    { opacity: 0, x: -50 },
    {
      opacity: 0.9,
      x: 0,
      duration: 1.5,
      ease: 'power3.out',
      scrollTrigger: {
        trigger: '.hoja-izq-itinerario',
        start: 'top 85%',
        toggleActions: 'play none none none',
        once: true 
      }
    }
  );

  gsap.fromTo('.hoja-der-itinerario',
    { opacity: 0, x: 50 },
    {
      opacity: 0.9,
      x: 0,
      duration: 1.5,
      ease: 'power3.out',
      scrollTrigger: {
        trigger: '.hoja-der-itinerario',
        start: 'top 85%',
        toggleActions: 'play none none none',
        once: true
      }
    }
  );

  // Animación del título (Entrada vertical)
  gsap.fromTo('.titulo-itinerario',
    { opacity: 0, y: -30 },
    {
      opacity: 1,
      y: 0,
      duration: 1.2,
      ease: 'power3.out',
      scrollTrigger: {
        trigger: '.titulo-itinerario',
        start: 'top 85%',
        toggleActions: 'play none none none',
        once: true
      }
    }
  );

  // ❌ Hemos ELIMINADO la animación separada de '.linea-central'
  
  // ⭐⭐ Animación SIMULTÁNEA de la Línea, Corazones y Eventos ⭐⭐
  const eventosContainer = document.getElementById('eventos-container');
  if (eventosContainer) {
      ScrollTrigger.create({
          trigger: eventosContainer,
          start: 'top 80%', // Punto de inicio para la animación de todo el bloque
          toggleActions: 'play none none none',
          once: true,
          onEnter: () => {
              
              // 1. Animación de la Línea Central (Zoom vertical)
              // Se inicia junto con los corazones
              gsap.fromTo('.linea-central',
                  { opacity: 0, scaleY: 0 },
                  {
                      opacity: 1,
                      scaleY: 1,
                      duration: 1.5, // Le damos más duración para un efecto más notorio de "dibujado"
                      ease: 'power2.out',
                      transformOrigin: 'top center' // Asegura que crezca desde arriba
                  }
              );

              // 2. Animación de Corazones (TODOS al mismo tiempo)
              gsap.fromTo('.corazon-item',
                  { opacity: 0, scale: 0 },
                  {
                      opacity: 1,
                      scale: 1,
                      duration: 0.8,
                      ease: 'back.out(1.7)',
                      stagger: 0 // Aparecen simultáneamente
                  }
              );

              // 3. Animación de Eventos (TODOS al mismo tiempo)
              gsap.fromTo('.evento-item',
                  { opacity: 0, y: 30 },
                  {
                      opacity: 1,
                      y: 0,
                      duration: 1,
                      ease: 'power3.out',
                      stagger: 0 // Aparecen simultáneamente
                  }
              );
          }
      });
  }
</script>