      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M21 2H3c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h7l-2 3v1h8v-1l-2-3h7c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2zm0 12H3V4h18v10z"/>
        </svg>
        <span>Novios Multi-Center</span>
      </a>

    </div>

       <!-- Separador -->
    <div class="separador-2 flex items-center justify-center gap-3 my-10 opacity-0">
      <div class="h-px w-16 bg-[#C8A75A]"></div>
      <div class="w-2 h-2 rounded-full bg-[#C8A75A]"></div>
      <div class="h-px w-16 bg-[#C8A75A]"></div>
    </div>

    <!-- Mensaje rom谩ntico -->
    <div class="seccion-mensaje text-center mb-4 opacity-0">
      <p class="font-charm text-2xl md:text-3xl text-[#8FA58E] leading-relaxed px-4">
        Con amor, dejamos esta opci贸n de regalo
      </p>
    </div>

 

    <!-- QR Code Grande -->
    <div class="seccion-qr text-center opacity-0">
      <div class="flex justify-center">
        <div class="bg-white p-8 rounded-3xl  border-4 border-[#C8A75A]/30">
          <img 
            src="/imagenes/QR5.png" 
            alt="C贸digo QR Mesa de Regalos" 
            class="w-64 h-64 md:w-80 md:h-80 object-contain"
          />
        </div>
      </div>
    </div>

  </div>
</section>

<style>
  .font-charm {
    font-family: 'Charm', cursive !important;
  }
  
  p, h2, h3 {
    text-shadow: 0 1px 2px rgba(255, 255, 255, 0.8);
  }
</style>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  // Animaci贸n de flores izquierda
  gsap.fromTo('.flores-izq', 
    {
      opacity: 0,
      x: -100,
      rotation: -10
    },
    {
      opacity: 1,
      x: 0,
      rotation: 0,
      duration: 1.5,
      ease: 'power3.out',
      scrollTrigger: {
        trigger: '.flores-izq',
        start: 'top 85%',
        toggleActions: 'play none none none'
      }
    }
  );

  // Animaci贸n de flores derecha
  gsap.fromTo('.flores-der', 
    {
      opacity: 0,
      x: 100,
      rotation: 10
    },
    {
      opacity: 1,
      x: 0,
      rotation: 0,
      duration: 1.5,
      ease: 'power3.out',
      scrollTrigger: {
        trigger: '.flores-der',
        start: 'top 85%',
        toggleActions: 'play none none none'
      }
    }
  );

  // Animaci贸n de la secci贸n t铆tulo
  gsap.fromTo('.seccion-titulo',
    {
      opacity: 0,
      y: 60,
      scale: 0.95
    },
    {
      opacity: 1,
      y: 0,
      scale: 1,
      duration: 1.3,
      ease: 'power3.out',
      scrollTrigger: {
        trigger: '.seccion-titulo',
        start: 'top 80%',
        toggleActions: 'play none none none'
      }
    }
  );

  // Animaci贸n separador 1
  gsap.fromTo('.separador-1',
    {
      opacity: 0,
      scale: 0.8
    },
    {
      opacity: 1,
      scale: 1,
      duration: 1,
      ease: 'power2.out',
      scrollTrigger: {
        trigger: '.separador-1',
        start: 'top 85%',
        toggleActions: 'play none none none'
      }
    }
  );

  // Animaci贸n del mensaje
  gsap.fromTo('.seccion-mensaje',
    {
      opacity: 0,
      y: 40
    },
    {
      opacity: 1,
      y: 0,
      duration: 1.2,
      ease: 'power3.out',
      scrollTrigger: {
        trigger: '.seccion-mensaje',
        start: 'top 80%',
        toggleActions: 'play none none none'
      }
    }
  );

  // Animaci贸n separador 2
  gsap.fromTo('.separador-2',
    {
      opacity: 0,
      scale: 0.8
    },
    {
      opacity: 1,
      scale: 1,
      duration: 1,
      ease: 'power2.out',
      scrollTrigger: {
        trigger: '.separador-2',
        start: 'top 85%',
        toggleActions: 'play none none none'
      }
    }
  );

  // Animaci贸n del QR con efecto especial
  gsap.fromTo('.seccion-qr',
    {
      opacity: 0,
      y: 60,
      scale: 0.9
    },
    {
      opacity: 1,
      y: 0,
      scale: 1,
      duration: 1.4,
      ease: 'back.out(1.2)',
      scrollTrigger: {
        trigger: '.seccion-qr',
        start: 'top 80%',
        toggleActions: 'play none none none'
      }
    }
  );
</script>